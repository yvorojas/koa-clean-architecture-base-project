{
  "name": "pmc-bff",
  "version": "1.0.10",
  "description": "pmc backend-for-frontend project",
  "main": "index.js",
  "repository": "git@bitbucket.org:segurosfalabella/pmc-bff.git",
  "author": "Seguros Falabella - 339",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "pm2-runtime ./src/ecosystem.json --env docker",
    "test": "jest --coverage",
    "lint": "eslint --fix .",
    "local:dev": "pm2-runtime ./src/ecosystem.json --env local_dev",
    "docker:build": "docker build -f docker/dev/Dockerfile -t segurosfalabella.azurecr.io/pmc-bff:latest .",
    "docker:run": "docker run --rm -it -p 3001:3001 -v `pwd`/src:/app/src segurosfalabella.azurecr.io/pmc-bff:latest",
    "docker:sh": "docker run --rm -it -p 3001:3001  segurosfalabella.azurecr.io/pmc-bff:latest sh",
    "precommit": "yarn test && yarn lint"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "fs": "^0.0.1-security",
    "husky": "^0.14.3",
    "joi": "^13.6.0",
    "joi-date-extensions": "^1.2.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.3.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^2.9.5",
    "pm2": "^3.0.3",
    "request": "^2.87.0",
    "swagger-jsdoc": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^23.4.1",
    "proxyquire": "^2.0.1",
    "sinon": "^6.1.4"
  }
}
